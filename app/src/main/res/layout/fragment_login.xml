<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_login_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:id="@+id/login_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não tem conta?!"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=" Registre-se"
                android:textColor="#ff9900" />

        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/login_layoutRedes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_facebook"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/login_twitter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/login_instagram"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/instagram" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_layoutRedes"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_usuario"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="#90000000"
                android:hint="Usuário"
                android:imeOptions="actionNext"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"

                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <EditText
                android:id="@+id/login_senha"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#90000000"
                android:hint="Senha"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"

                android:singleLine="true"

                android:textColor="#FFF"
                android:textColorHint="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_layout_buttons"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_btEntrar"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/login_entrar"
                android:text="ENTRAR"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/login_btFacebook"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_entrar_fb"
                android:text="ENTRAR COM FACEBOOK"
                android:textColor="#FFF" />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>